{
  "name": "pnpm-ci-tools",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean:only": "git clean -fdX -e '!.pnpm' -e '!.pnpm/**'",
    "clean": "pnpm clean:only && pnpm install",
    "build": "pnpm task build",
    "task": "pnpm run -r --filter=!pnpm-ci-tools",
    "lint": "eslint 'packages/**/*.ts'",
    "lint:fix": "pnpm lint -- --fix",
    "preinstall": "npx only-allow pnpm && npx toolcheck",
    "postinstall": "husky install",
    "pretest": "pnpm build",
    "test": "pnpm task test"
  },
  "keywords": [
    "pnpm"
  ],
  "author": "Michael Durling",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.0.9",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  }
}
